<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.angelg.videocluborm.controller.FormController"
      spacing="10">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <Label text="Nueva Película" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Label text="Título:"/>
    <TextField fx:id="txtTitulo"/>

    <Label text="Director:"/>
    <TextField fx:id="txtDirector"/>

    <Label text="Año:"/>
    <TextField fx:id="txtAnio"/>

    <Label text="Stock:"/>
    <TextField fx:id="txtStock"/>

    <HBox spacing="10">
        <Button text="Guardar" onAction="#onGuardar"/>
        <Button text="Cancelar" onAction="#onCancelar"/>
    </HBox>

    <Label fx:id="lblEstado" text=""/>

</VBox>

